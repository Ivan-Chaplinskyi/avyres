        },
        {
            "type": "richtext",
            "id": "feature_text",
            "label": "Feature Text"
        },
        {
            "type": "richtext",
            "id": "richtext",
            "label": "Rich Text"
        }
    ],
    "presets": [
        {
            "name": "Feature Rows"
        }
    ]
}
{% endschema %}